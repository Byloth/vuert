{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM",
      "ScriptHost",
      "WebWorker"
    ],
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "preserveValueImports": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@docs/*": ["docs/*"],
      "@vitepress/theme/*": ["node_modules/vitepress/dist/client/theme-default/*"]
    },
    "types": [
      "vite/client",
      "vitepress/client"
    ]
  },
  "include": [
    "docs/**/*",
    "docs/**/*.json",
    "docs/**/*.vue",

    "docs/.vitepress/**/*",
    "docs/.vitepress/**/*.json",
    "docs/.vitepress/**/*.vue",

    "src/**/*",
    "src/**/*.json",
    "src/**/*.vue"
  ]
}
