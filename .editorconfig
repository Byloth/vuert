# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{config.js,*.config.js}]
indent_size = 2

[.eslintrc.{cjs,js}]
indent_size = 2

[*.{json,yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
